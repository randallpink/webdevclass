<p id="notice"><%= notice %></p>

<h1>Listing Pizzas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Bread</th>
      <th>Sauce</th>
      <th>Price</th>
      <th>Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pizzas.each do |pizza| %>
      <tr>
        <td><%= pizza.name %></td>
        <td><%= pizza.description %></td>
        <td><%= pizza.bread.name %></td>
        <td><%= pizza.sauce.name %></td>
        <td><%= pizza.price %></td>
        <td><%=  image_tag pizza.photo, class: "col-xs-6" %></td>
        <td><%= link_to 'Show', pizza , class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit', edit_pizza_path(pizza) ,class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', pizza, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pizza', new_pizza_path, class: 'btn btn-primary btn-xs' %>
