<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @post.name %>
</p>

<p>
  <strong>Slug:</strong>
  <%= @post.slug %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>Featured image:</strong>
  <%= @post.featured_image %>
</p>
<h2>Categories</h2>
<ul>
	<%- @post.categories.each do |category| %>
	  	<li><%= category.name %> </li>
	<% end %>
</ul>


