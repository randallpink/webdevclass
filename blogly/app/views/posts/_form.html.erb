<%= simple_form_for(@post) do |f| %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :slug %>
    <%= f.input :content %>
    <%= f.input :featured_image %>
    <%= f.association :categories, as: :check_boxes %>
    <%= f.association :user%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
