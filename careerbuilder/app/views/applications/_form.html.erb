<%= simple_form_for(@application) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    
    <%= f.input :resume %>
    <%= f.input :firstname %>
    <%= f.input :lastname %>
    <%= f.input :coverletter %>
    <%= f.input :opt_in %>
    <%= f.input :street_address %>
    <%= f.hidden_field :job_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
