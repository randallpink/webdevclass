<p id="notice"><%= notice %></p>

<h1>Listing Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>City</th>
      <th>State</th>
      <th>Description</th>
      <th>Is active</th>
      <th>Is internal</th>
      <th>Requirements</th>
      <th>Is remote</th>
      <th>Hourly rate</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.city %></td>
        <td><%= job.state %></td>
        <td><%= job.description %></td>
        <td><%= job.is_active %></td>
        <td><%= job.is_internal %></td>
        <td><%= job.requirements %></td>
        <td><%= job.is_remote %></td>
        <td><%= job.hourly_rate %></td>
        <td><%= job.user.email %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

